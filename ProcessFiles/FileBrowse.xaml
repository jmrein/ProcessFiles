<UserControl x:Class="ProcessFiles.FileBrowse"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProcessFiles"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" d:DataContext="{d:DesignInstance local:FileBrowseViewModel}">
  <UserControl.Resources>
    <ResourceDictionary Source="Resources.xaml"/>
  </UserControl.Resources>
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" SharedSizeGroup="Prompt"/>
        <ColumnDefinition Width="*" MinWidth="200"/>
        <ColumnDefinition Width="Auto" SharedSizeGroup="Browse"/>
      </Grid.ColumnDefinitions>
      <TextBlock Text="{Binding LabelText}" DockPanel.Dock="Left" Style="{StaticResource MarginElement}" Grid.Column="0"/>
      <TextBox Text="{Binding Location, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsEnabled}" Style="{StaticResource MarginElement}" Grid.Column="1"/>
      <Button Content="{Binding BrowseText}" Command="{Binding BrowseCommand}" Grid.Column="2"/>
    </Grid>
</UserControl>
